{
  "compilerOptions": {
    "noUnusedLocals": true,
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "@pages/*": ["pages/*"],
      "@routes/*": ["routes/*"],
      "@themes/*": ["themes/*"],
      "@services/*": ["services/*"],
      "@reducer/*": ["reducer/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "checkJs": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
